<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Holo.ImageButton.NumberPickerUpButton" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/numberpicker_up_btn_holo_dark</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">22dp</item>
    </style>

    <style name="Widget.Holo.ImageButton.NumberPickerDownButton" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/numberpicker_down_btn_holo_dark</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Widget.Holo.EditText.NumberPickerInputText" parent="android:Widget.Holo.EditText">
        <item name="android:paddingTop">13sp</item>
        <item name="android:paddingBottom">13sp</item>
        <item name="android:paddingLeft">2sp</item>
        <item name="android:paddingRight">2sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:background">@drawable/editbox_background_normal</item>
    </style>

</resources>